<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bckgrnd"
    tools:context=".HomeScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:id="@+id/freetips"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="5dp"
        android:background="@drawable/freetips"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/vipsub"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="5dp"
        android:background="@drawable/vipsubscritions"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
       />

    <Button
        android:id="@+id/viparchives"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:elevation="5dp"
        android:background="@drawable/archieves"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/rate"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:onClick="rateMe"
        android:elevation="5dp"
        android:background="@drawable/rateus"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
